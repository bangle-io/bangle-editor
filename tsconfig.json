{
  "lib": [
    "ES2019",
    "dom",
    "scripthost"
  ],
  "include": [
    "**/src/**/*.ts",
    "**/src/**/*.tsx",
    // "**/__tests__/*.tsx",
    // "**/__tests__/*.ts"
  ],
  "exclude": [
    ".yarn"
  ],
  "compilerOptions": {
    "module": "ES2020",
    "allowJs": false,
    "target": "es2020",
    "strict": true,
    "declaration": true,
    "moduleResolution": "node",
    "declarationMap": true,
    "removeComments": false,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": false,
    "jsx": "react",
    "newLine": "lf",
    "pretty": true,
    "stripInternal": true,
    "noEmit": true,
    "noEmitOnError": false,
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": false,
    "noPropertyAccessFromIndexSignature": false,
    "useDefineForClassFields": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "paths": {
      "@bangle.dev/base-components": [
        "./components/base-components/src/index.ts"
      ],
      "@bangle.dev/emoji": [
        "./components/emoji/src/index.ts"
      ],
      "@bangle.dev/markdown-front-matter": [
        "./components/markdown-front-matter/src/index.ts"
      ],
      "@bangle.dev/react-emoji-suggest": [
        "./components/react-emoji-suggest/src/index.ts"
      ],
      "@bangle.dev/react-menu": [
        "./components/react-menu/src/index.ts"
      ],
      "@bangle.dev/react-sticker": [
        "./components/react-sticker/src/index.ts"
      ],
      "@bangle.dev/react-stopwatch": [
        "./components/react-stopwatch/src/index.ts"
      ],
      "@bangle.dev/search": [
        "./components/search/src/index.ts"
      ],
      "@bangle.dev/table": [
        "./components/table/src/index.ts"
      ],
      "@bangle.dev/text-formatting": [
        "./components/text-formatting/src/index.ts"
      ],
      "@bangle.dev/timestamp": [
        "./components/timestamp/src/index.ts"
      ],
      "@bangle.dev/tooltip": [
        "./components/tooltip/src/index.ts"
      ],
      "@bangle.dev/trailing-node": [
        "./components/trailing-node/src/index.ts"
      ],
      "@bangle.dev/wiki-link": [
        "./components/wiki-link/src/index.ts"
      ],
      "broader-unit-tests": [
        "./lib/broader-unit-tests/src/index.ts"
      ],
      "@bangle.dev/collab-client": [
        "./lib/collab-client/src/index.ts"
      ],
      "@bangle.dev/collab-server": [
        "./lib/collab-server/src/index.ts"
      ],
      "@bangle.dev/core": [
        "./lib/core/src/index.ts"
      ],
      "@bangle.dev/disk": [
        "./lib/disk/src/index.ts"
      ],
      "@bangle.dev/markdown": [
        "./lib/markdown/src/index.ts"
      ],
      "@bangle.dev/pm": [
        "./lib/pm/src/index.ts"
      ],
      "@bangle.dev/pm-commands": [
        "./lib/pm-commands/src/index.ts"
      ],
      "@bangle.dev/react": [
        "./lib/react/src/index.ts"
      ],
      "@bangle.dev/utils": [
        "./lib/utils/src/index.ts"
      ],
      "@bangle.dev/all-base-components": [
        "./tooling/all-base-components/src/index.ts"
      ],
      "bangle-scripts": [
        "./tooling/bangle-scripts/src/index.ts"
      ],
      "e2e-tests": [
        "./tooling/e2e-tests/src/index.ts"
      ],
      "@bangle.dev/jest-utils": [
        "./tooling/jest-utils/src/index.ts"
      ],
      "@bangle.dev/test-helpers": [
        "./tooling/test-helpers/src/index.ts"
      ]
    }
  }
}