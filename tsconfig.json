        "./components/react-sticker"
      ],
      "@bangle.dev/react-stopwatch": [
        "./components/react-stopwatch"
      ],
      "@bangle.dev/search": [
        "./components/search"
      ],
      "@bangle.dev/table": [
        "./components/table"
      ],
      "@bangle.dev/text-formatting": [
        "./components/text-formatting"
      ],
      "@bangle.dev/timestamp": [
        "./components/timestamp"
      ],
      "@bangle.dev/tooltip": [
        "./components/tooltip"
      ],
      "@bangle.dev/trailing-node": [
        "./components/trailing-node"
      ],
      "@bangle.dev/wiki-link": [
        "./components/wiki-link"
      ],
      "broader-unit-tests": [
        "./lib/broader-unit-tests"
      ],
      "@bangle.dev/collab-client": [
