{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@banglejs/core/*": [
        "./core/*"
      ],
      "@banglejs/core": [
        "./core/index.js"
      ],
      "@banglejs/emoji": [
        "./emoji/index.js"
      ],
      "@banglejs/emoji/*": [
        "./emoji/*"
      ],
      "@banglejs/markdown": [
        "./markdown/index.js"
      ],
      "@banglejs/markdown/*": [
        "./markdown/*"
      ],
      "@banglejs/tooltip": [
        "./tooltip/index.js"
      ],
      "@banglejs/tooltip/*": [
        "./tooltip/*"
      ],
      "bangle-play/*": [
        "./bangle-play/*"
      ],
      "bangle-plugins/*": [
        "./bangle-plugins/*"
      ],
      "@banglejs/react": [
        "./react/index.js"
      ],
      "@banglejs/react/*": [
        "./react/*"
      ],
      "@banglejs/react-stopwatch": [
        "./contrib/react-stopwatch/index.js"
      ],
      "@banglejs/react-sticker": [
        "./contrib/react-sticker/index.js"
      ],
      "@banglejs/react-menu": [
        "./react-menu/index.js"
      ],
    },
    "module": "es2020",
    "target": "esnext"
  },
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "archive",
    "bangle-play/build",
    "bangle-play/node_modules",
    "__integration-tests__/build",
    "public",
    ".cache",
    ".yarn",
    "coverage",
    ".pnp.js"
  ]
}