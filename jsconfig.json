{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@bangle.dev/core/*": [
        "./core/*"
      ],
      "@bangle.dev/core": [
        "./core/index.js"
      ],
      "@bangle.dev/emoji": [
        "./emoji/index.js"
      ],
      "@bangle.dev/emoji/*": [
        "./emoji/*"
      ],
      "@bangle.dev/table": [
        "./table/index.js"
      ],
      "@bangle.dev/table/*": [
        "./table/*"
      ],
      "@bangle.dev/react-emoji-suggest": [
        "./contrib/react-emoji-suggest/index.js"
      ],
      "@bangle.dev/react-emoji-suggest/*": [
        "./contrib/react-emoji-suggest/*"
      ],
      "@bangle.dev/markdown": [
        "./markdown/index.js"
      ],
      "@bangle.dev/markdown/*": [
        "./markdown/*"
      ],
      "@bangle.dev/tooltip": [
        "./tooltip/index.js"
      ],
      "@bangle.dev/tooltip/*": [
        "./tooltip/*"
      ],
      "@bangle.dev/trailing-node": [
        "./contrib/trailing-node/index.js"
      ],
      "@bangle.dev/trailing-node/*": [
        "./contrib/trailing-node/*"
      ],
      "@bangle.dev/text-formatting": [
        "./contrib/text-formatting/index.js"
      ],
      "@bangle.dev/text-formatting/*": [
        "./contrib/text-formatting/*"
      ],
      "@bangle.dev/timestamp": [
        "./contrib/timestamp/index.js"
      ],
      "@bangle.dev/timestamp/*": [
        "./contrib/timestamp/*"
      ],
      "@bangle.dev/wiki-link": [
        "./contrib/wiki-link/index.js"
      ],
      "@bangle.dev/wiki-link/*": [
        "./contrib/wiki-link/*"
      ],
      "@bangle.dev/react": [
        "./react/index.js"
      ],
      "@bangle.dev/react/*": [
        "./react/*"
      ],
      "@bangle.dev/react-stopwatch": [
        "./contrib/react-stopwatch/index.js"
      ],
      "@bangle.dev/react-sticker": [
        "./contrib/react-sticker/index.js"
      ],
      "@bangle.dev/react-menu": [
        "./react-menu/index.js"
      ],
    },
    "module": "es2020",
    "target": "esnext"
  },
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "archive",
    "__integration-tests__/build",
    "public",
    ".cache",
    ".yarn",
    "coverage",
    ".pnp.js"
  ]
}