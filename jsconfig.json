{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@bangle.dev/core/*": [
        "./core/*"
      ],
      "@bangle.dev/core": [
        "./core/index.js"
      ],
      "@bangle.dev/emoji": [
        "./emoji/index.js"
      ],
      "@bangle.dev/emoji/*": [
        "./emoji/*"
      ],
      "@bangle.dev/react-emoji-suggest": [
        "./contrib/react-emoji-suggest/index.js"
      ],
      "@bangle.dev/react-emoji-suggest/*": [
        "./contrib/react-emoji-suggest/*"
      ],
      "@bangle.dev/markdown": [
        "./markdown/index.js"
      ],
      "@bangle.dev/markdown/*": [
        "./markdown/*"
      ],
      "@bangle.dev/tooltip": [
        "./tooltip/index.js"
      ],
      "@bangle.dev/tooltip/*": [
        "./tooltip/*"
      ],
      "@bangle.dev/trailing-node": [
        "./contrib/trailing-node/index.js"
      ],
      "@bangle.dev/trailing-node/*": [
        "./contrib/trailing-node/*"
      ],
      "@bangle.dev/timestamp": [
        "./contrib/timestamp/index.js"
      ],
      "@bangle.dev/timestamp/*": [
        "./contrib/timestamp/*"
      ],
      "@bangle.dev/markdown-it-container": [
        "./contrib/markdown-it-container/index.js"
      ],
      "@bangle.dev/markdown-it-container/*": [
        "./contrib/markdown-it-container/*"
      ],
      "bangle-play/*": [
        "./_bangle-play/*"
      ],
      "@bangle.dev/react": [
        "./react/index.js"
      ],
      "@bangle.dev/react/*": [
        "./react/*"
      ],
      "@bangle.dev/collab": [
        "./collab/index.js"
      ],
      "@bangle.dev/collab/*": [
        "./collab/*"
      ],
      "@bangle.dev/react-stopwatch": [
        "./contrib/react-stopwatch/index.js"
      ],
      "@bangle.dev/react-sticker": [
        "./contrib/react-sticker/index.js"
      ],
      "@bangle.dev/react-menu": [
        "./react-menu/index.js"
      ],
      "bangle-website/*": [
        "./_bangle-website/*"
      ],
    },
    "module": "es2020",
    "target": "esnext"
  },
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "archive",
    "_bangle-play/build",
    "_bangle-play/node_modules",
    "__integration-tests__/build",
    "_bangle-website/build",
    "_bangle-website/.docusaurus",
    "_bangle-website/.cache-loader",
    "public",
    ".cache",
    ".yarn",
    "coverage",
    ".pnp.js"
  ]
}