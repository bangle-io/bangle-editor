{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "bangle-core/*": [
        "./bangle-core/*"
      ],
      "bangle-play/*": [
        "./bangle-play/*"
      ],
      "bangle-plugins/*": [
        "./bangle-plugins/*"
      ],
      "bangle-react/*": [
        "./bangle-react/*"
      ],
      "@banglejs/stopwatch": [
        "./react-contrib/stopwatch/index.js"
      ],
      "@banglejs/sticker": [
        "./react-contrib/sticker/index.js"
      ],
    },
    "module": "es2020",
    "target": "esnext"
  },
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "archive",
    "bangle-play/build",
    "bangle-play/node_modules",
    "public",
    ".cache",
    ".yarn",
    "coverage",
    ".pnp.js"
  ]
}