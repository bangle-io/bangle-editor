{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@banglejs/core/*": [
        "./core/*"
      ],
      "@banglejs/core": [
        "./core/index.js"
      ],
      "@banglejs/emoji": [
        "./emoji/index.js"
      ],
      "@banglejs/emoji/*": [
        "./emoji/*"
      ],
      "@banglejs/emoji-suggest": [
        "./contrib/emoji-suggest/index.js"
      ],
      "@banglejs/emoji-suggest/*": [
        "./contrib/emoji-suggest/*"
      ],
      "@banglejs/markdown": [
        "./markdown/index.js"
      ],
      "@banglejs/markdown/*": [
        "./markdown/*"
      ],
      "@banglejs/tooltip": [
        "./tooltip/index.js"
      ],
      "@banglejs/tooltip/*": [
        "./tooltip/*"
      ],
      "@banglejs/trailing-node": [
        "./contrib/trailing-node/index.js"
      ],
      "@banglejs/trailing-node/*": [
        "./contrib/trailing-node/*"
      ],
      "@banglejs/timestamp": [
        "./contrib/timestamp/index.js"
      ],
      "@banglejs/timestamp/*": [
        "./contrib/timestamp/*"
      ],
      "@banglejs/markdown-it-container": [
        "./contrib/markdown-it-container/index.js"
      ],
      "@banglejs/markdown-it-container/*": [
        "./contrib/markdown-it-container/*"
      ],
      "bangle-play/*": [
        "./_bangle-play/*"
      ],
      "@banglejs/react": [
        "./react/index.js"
      ],
      "@banglejs/react/*": [
        "./react/*"
      ],
      "@banglejs/collab": [
        "./collab/index.js"
      ],
      "@banglejs/collab/*": [
        "./collab/*"
      ],
      "@banglejs/react-stopwatch": [
        "./contrib/react-stopwatch/index.js"
      ],
      "@banglejs/react-sticker": [
        "./contrib/react-sticker/index.js"
      ],
      "@banglejs/react-menu": [
        "./react-menu/index.js"
      ],
      "bangle-website/*": [
        "./_bangle-website/*"
      ],
    },
    "module": "es2020",
    "target": "esnext"
  },
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "archive",
    "_bangle-play/build",
    "_bangle-play/node_modules",
    "__integration-tests__/build",
    "_bangle-website/build",
    "_bangle-website/.docusaurus",
    "_bangle-website/.cache-loader",
    "public",
    ".cache",
    ".yarn",
    "coverage",
    ".pnp.js"
  ]
}