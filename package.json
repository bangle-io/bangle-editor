{
  "name": "playground",
  "version": "0.1.0",
  "private": true,
  "alias": {
    "app": "./src/app",
    "plugins": "./src/plugins",
    "utils": "./src/utils",
    "test-helpers": "./src/test-helpers"
  },
  "dependencies": {
    "bulma": "^0.8.0",
    "classnames": "^2.2.6",
    "clipboard-polyfill": "^3.0.0",
    "core-js": "^3.6.4",
    "date-fns": "^2.10.0",
    "emojis-keywords": "^2.0.0",
    "emojis-list": "^3.0.0",
    "localforage": "^1.7.3",
    "popper.js": "^1.16.1",
    "prop-types": "^15.7.2",
    "prosemirror-commands": "^1.0.8",
    "prosemirror-dropcursor": "^1.1.1",
    "prosemirror-gapcursor": "^1.0.4",
    "prosemirror-history": "^1.0.4",
    "prosemirror-inputrules": "^1.0.4",
    "prosemirror-keymap": "^1.0.1",
    "prosemirror-menu": "^1.0.5",
    "prosemirror-model": "^1.7.4",
    "prosemirror-state": "^1.2.4",
    "prosemirror-utils": "^0.9.6",
    "prosemirror-view": "^1.14.2",
    "ramda": "^0.27.0",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "recompose": "^0.30.0",
    "tailwindcss": "^1.2.0",
    "throttle-debounce": "^2.1.0",
    "tiptap-commands": "^1.12.5"
  },
  "scripts": {
    "start": "parcel public/index.html --port 3000",
    "build": "parcel build public/index.html --out-dir build",
    "deploy": "npm run build && surge build bangle-test.surge.sh",
    "snapshot": "npm run build && node ./scripts/snapshot",
    "unit-tests": "jest",
    "integration-tests": "jest --config=jest-integration.config.js",
    "test": "npm run unit-tests && npm run integration-tests",
    "css": "postcss src/css/tailwind.src.css -o src/tailwind.css -w",
    "eject": "react-scripts eject"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "quoteProps": "consistent",
    "arrowParens": "always"
  },
  "browserslist": [
    "last 3 chrome version",
    "last 3 firefox version"
  ],
  "devDependencies": {
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-react": "^7.10.4",
    "@testing-library/react": "^10.4.7",
    "@typescript-eslint/eslint-plugin": "2.x",
    "@typescript-eslint/parser": "2.x",
    "babel-eslint": "10.x",
    "babel-jest": "^26.1.0",
    "eslint": "6.x",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-flowtype": "4.x",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "6.x",
    "eslint-plugin-react": "7.x",
    "eslint-plugin-react-hooks": "2.x",
    "jest": "^26.1.0",
    "jest-circus": "^26.1.0",
    "jest-diff": "^26.1.0",
    "jest-puppeteer": "^4.4.0",
    "parcel": "^1.12.4",
    "parcel-bundler": "^1.12.4",
    "postcss": "^7.0.27",
    "prettier": "^2.0.5",
    "prosemirror-dev-tools": "^2.1.1",
    "prosemirror-test-builder": "^1.0.3",
    "puppeteer": "^5.1.0",
    "react-test-renderer": "^16.13.1",
    "surge": "^0.21.3"
  }
}
