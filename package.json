{
  "name": "playground",
  "version": "0.1.0",
  "private": true,
  "alias": {
    "app": "./src/app",
    "plugins": "./src/plugins",
    "utils": "./src/utils",
    "test-helpers": "./src/test-helpers"
  },
  "dependencies": {
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-optional-chaining": "^7.11.0",
    "prosemirror-dev-tools": "https://github.com/kepta/prosemirror-dev-tools",
    "classnames": "^2.2.6",
    "core-js": "^3.6.4",
    "date-fns": "^2.10.0",
    "emojis-keywords": "^2.0.0",
    "emojis-list": "^3.0.0",
    "localforage": "^1.7.3",
    "lodash.debounce": "^4.0.8",
    "popper.js": "^1.16.1",
    "prop-types": "^15.7.2",
    "prosemirror-commands": "^1.1.4",
    "prosemirror-dropcursor": "^1.1.1",
    "prosemirror-gapcursor": "^1.1.5",
    "prosemirror-history": "^1.0.4",
    "prosemirror-inputrules": "^1.0.4",
    "prosemirror-keymap": "^1.1.4",
    "prosemirror-menu": "^1.1.4",
    "prosemirror-model": "^1.11.0",
    "prosemirror-state": "^1.3.3",
    "prosemirror-transform": "^1.2.7",
    "prosemirror-utils": "^0.9.6",
    "prosemirror-view": "^1.15.2",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "tailwindcss": "^1.6.0",
    "throttle-debounce": "^2.1.0",
    "tiptap-commands": "^1.14.3"
  },
  "scripts": {
    "start": "webpack-dev-server --mode development --open --port 3000",
    "prebuild": "npm run lint",
    "build": "NODE_ENV=production webpack --env.production",
    "deploy": "npm run build && surge build bangle-test.surge.sh",
    "snapshot": "npm run build && node ./scripts/snapshot",
    "pretest": "npm run lint",
    "test": "npm run unit-tests && npm run integration-tests",
    "unit-tests": "jest",
    "integration-tests": "jest --config=jest-integration.config.js",
    "lint": "prettier --check \"src/**/*.js\" && eslint ."
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "quoteProps": "consistent",
    "arrowParens": "always"
  },
  "lint-staged": {
    "*.js": [
      "eslint",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "browserslist": [
    "last 3 chrome version"
  ],
  "devDependencies": {
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-react": "^7.10.4",
    "@testing-library/react": "^10.4.7",
    "@typescript-eslint/eslint-plugin": "2.x",
    "@typescript-eslint/parser": "2.x",
    "autoprefixer": "^9.8.6",
    "babel-eslint": "10.x",
    "babel-jest": "^26.1.0",
    "babel-loader": "^8.1.0",
    "css-loader": "^4.2.1",
    "eslint": "6.x",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-flowtype": "4.x",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "6.x",
    "eslint-plugin-react": "7.x",
    "eslint-plugin-react-hooks": "2.x",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^4.3.0",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "jest-circus": "^26.1.0",
    "jest-diff": "^26.1.0",
    "jest-puppeteer": "^4.4.0",
    "lint-staged": "^10.2.11",
    "mini-css-extract-plugin": "^0.9.0",
    "parcel-bundler": "^1.12.4",
    "postcss-cli": "^7.1.1",
    "postcss-custom-properties": "^9.1.1",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "postcss-nested": "^4.2.3",
    "prettier": "^2.0.5",
    "puppeteer": "^5.1.0",
    "style-loader": "^1.2.1",
    "surge": "^0.21.3",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "resolutions": {
    "prosemirror-commands": "1.1.4",
    "prosemirror-keymap": "1.1.4",
    "prosemirror-model": "1.11.0",
    "prosemirror-state": "1.3.3",
    "prosemirror-view": "1.15.2",
    "prosemirror-transform": "1.2.7"
  }
}
