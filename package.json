{
  "name": "banglejs",
  "version": "0.9.1",
  "homepage": "https://bangle.dev",
  "authors": [
    {
      "name": "Kushan Joshi",
      "email": "0o3ko0@gmail.com",
      "web": "http://github.com/kepta"
    }
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bangle-io/bangle.dev.git"
  },
  "bugs": {
    "url": "https://github.com/bangle-io/bangle.dev/issues"
  },
  "private": true,
  "workspaces": [
    "__integration-tests__",
    "_bangle-website",
    "_bangle-scripts",
    "core",
    "collab",
    "emoji",
    "markdown",
    "react",
    "react-menu",
    "tooltip",
    "table",
    "contrib/*"
  ],
  "scripts": {
    "g:babel": "yarn babel $INIT_CWD --out-dir $INIT_CWD/dist --ignore \"$INIT_CWD/**/__tests__,$INIT_CWD/dist\"",
    "update-versions": "yarn constraints --fix",
    "test": "yarn lint && yarn integration-tests && yarn unit-tests",
    "unit-tests": "yarn jest",
    "integration-tests": "yarn e2e:test",
    "lint": "yarn prettier --check . && EsLintCycle=yes yarn eslint .",
    "scripts:build-api-docs": "yarn node _bangle-scripts/docs/index.js",
    "release-packages": "yarn workspaces foreach -v --all --no-private npm publish"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "quoteProps": "consistent",
    "arrowParens": "always"
  },
  "lint-staged": {
    "*.js": [
      "yarn eslint",
      "yarn prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "./_bangle-scripts/pre-push.sh $HUSKY_GIT_PARAMS"
    }
  },
  "resolutions": {
    "prosemirror-commands": "1.1.4",
    "prosemirror-keymap": "1.1.4",
    "prosemirror-model": "^1.12.0",
    "prosemirror-state": "^1.3.3",
    "prosemirror-view": "^1.16.3",
    "prosemirror-transform": "1.2.7",
    "prosemirror-inputrules": "^1.1.3",
    "prosemirror-utils/prosemirror-tables": "0.9.6"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.9",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-optional-chaining": "^7.12.7",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-react": "^7.12.7",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "@yarnpkg/pnpify": "^2.4.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "eslint": "^7.15.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testing-library": "^3.10.1",
    "expect-puppeteer": "^4.4.0",
    "husky": "^4.3.5",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1"
  }
}
