{
  "name": "bangle",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "bangle-core",
    "bangle-play",
    "bangle-plugins"
  ],
  "scripts": {
    "start": "yarn webpack-dev-server --mode development --port 4000 --host 0.0.0.0",
    "build": "yarn lint && NODE_ENV=production yarn webpack --env.production",
    "deploy": "yarn build && yarn surge build bangle-test.surge.sh",
    "snapshot": "yarn build && yarn node ./scripts/snapshot",
    "pretest": "yarn lint",
    "test": "yarn lint && yarn unit-tests && yarn integration-tests",
    "unit-tests": "yarn jest",
    "integration-tests": "yarn jest --config=jest-integration.config.js",
    "lint": "yarn prettier --check \"src/**/*.js\" && yarn eslint ."
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "quoteProps": "consistent",
    "arrowParens": "always"
  },
  "lint-staged": {
    "*.js": [
      "yarn eslint",
      "yarn prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.11.1",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-optional-chaining": "^7.11.0",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-react": "^7.10.4",
    "@testing-library/react": "^10.4.7",
    "autoprefixer": "^9.8.6",
    "babel-eslint": "10.x",
    "babel-jest": "^26.1.0",
    "eslint": "6.x",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-flowtype": "4.x",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "6.x",
    "eslint-plugin-react": "7.x",
    "eslint-plugin-react-hooks": "2.x",
    "expect-puppeteer": "^4.4.0",
    "husky": "^4.3.0",
    "jest": "^26.4.0",
    "jest-circus": "^26.1.0",
    "jest-diff": "^26.1.0",
    "jest-environment-node": "^26.2.0",
    "jest-environment-puppeteer": "^4.4.0",
    "jest-puppeteer": "^4.4.0",
    "lint-staged": "^10.3.0",
    "postcss-cli": "^7.1.1",
    "postcss-custom-properties": "^9.1.1",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "postcss-nested": "^4.2.3",
    "prettier": "^2.0.5",
    "puppeteer": "^5.2.1",
    "surge": "^0.21.3"
  },
  "resolutions": {
    "prosemirror-commands": "1.1.4",
    "prosemirror-keymap": "1.1.4",
    "prosemirror-model": "1.11.0",
    "prosemirror-state": "1.3.3",
    "prosemirror-view": "^1.15.2",
    "prosemirror-transform": "1.2.7",
    "tiptap-utils": "1.10.4",
    "prosemirror-utils/prosemirror-tables": "0.9.6"
  }
}
