{
  "name": "bangle",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "bangle-core",
    "bangle-play",
    "bangle-plugins",
    "bangle-react",
    "contrib/*",
    "integration-tests"
  ],
  "scripts": {
    "start": "yarn workspace bangle-play start",
    "test": "yarn lint && yarn integration-tests && yarn unit-tests",
    "unit-tests": "yarn jest",
    "integration-tests": "yarn workspace integration-tests test",
    "lint": "yarn prettier --check . && yarn eslint .",
    "root:lint": "yarn lint"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "quoteProps": "consistent",
    "arrowParens": "always"
  },
  "lint-staged": {
    "*.js": [
      "yarn eslint",
      "yarn prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "./scripts/pre-push.sh $HUSKY_GIT_PARAMS"
    }
  },
  "resolutions": {
    "prosemirror-commands": "1.1.4",
    "prosemirror-keymap": "1.1.4",
    "prosemirror-model": "^1.12.0",
    "prosemirror-state": "^1.3.3",
    "prosemirror-view": "^1.16.3",
    "prosemirror-transform": "1.2.7",
    "prosemirror-inputrules": "^1.1.3",
    "prosemirror-utils/prosemirror-tables": "0.9.6"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-optional-chaining": "^7.11.0",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@typescript-eslint/eslint-plugin": "2.x",
    "@typescript-eslint/parser": "2.x",
    "@yarnpkg/pnpify": "^2.3.3",
    "babel-eslint": "10.x",
    "babel-jest": "^26.3.0",
    "eslint": "6.x",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-flowtype": "4.x",
    "eslint-plugin-import": "2.x",
    "eslint-plugin-jsx-a11y": "6.x",
    "eslint-plugin-react": "7.x",
    "eslint-plugin-react-hooks": "2.x",
    "expect-puppeteer": "^4.4.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "lint-staged": "^10.5.2",
    "prettier": "^2.2.0"
  }
}
