{
  "name": "bangle",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "__integration-tests__",
    "core",
    "bangle-play",
    "bangle-plugins",
    "react",
    "react-menu",
    "contrib/*"
  ],
  "scripts": {
    "start": "yarn workspace bangle-play start",
    "test": "yarn lint && yarn integration-tests && yarn unit-tests",
    "unit-tests": "yarn jest",
    "integration-tests": "yarn g:integration-tests",
    "lint": "yarn prettier --check . && yarn eslint .",
    "root:lint": "yarn lint"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "quoteProps": "consistent",
    "arrowParens": "always"
  },
  "lint-staged": {
    "*.js": [
      "yarn eslint",
      "yarn prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "./scripts/pre-push.sh $HUSKY_GIT_PARAMS"
    }
  },
  "resolutions": {
    "prosemirror-commands": "1.1.4",
    "prosemirror-keymap": "1.1.4",
    "prosemirror-model": "^1.12.0",
    "prosemirror-state": "^1.3.3",
    "prosemirror-view": "^1.16.3",
    "prosemirror-transform": "1.2.7",
    "prosemirror-inputrules": "^1.1.3",
    "prosemirror-utils/prosemirror-tables": "0.9.6"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-optional-chaining": "^7.11.0",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@typescript-eslint/eslint-plugin": "^4.0.0",
    "@typescript-eslint/parser": "^4.0.0",
    "@yarnpkg/pnpify": "^2.3.3",
    "babel-eslint": "^10.0.0",
    "babel-jest": "^26.3.0",
    "eslint": "^7.5.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.8",
    "eslint-plugin-testing-library": "^3.10.1",
    "expect-puppeteer": "^4.4.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "lint-staged": "^10.5.2",
    "prettier": "^2.2.0"
  }
}
